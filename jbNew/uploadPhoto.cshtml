    {
        var fileName = "";
        var fileSavePath = "";
        var uploadedFile = Request.Files[0];
        fileName = Session["id"].ToString() + ".jpg";
        fileSavePath = Server.MapPath("~/img/Users/" + fileName);
        uploadedFile.SaveAs(fileSavePath);
    }
}
       
